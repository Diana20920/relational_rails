<style>
table, th, td {
  border: 1px solid lavender;
}

th, td {
  padding: 10px;
}
</style>

<h1>Novels</h1>
<a href="/novels/new">New Novel</a>

  <table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Author</th>
    <th>Hard Cover</th>
    <th>Number of Chapters</th>
    <th>Written Date</th>
    <th>Revised Date</th>
  </tr>
  <% @novels.each do |novel| %>
  <tr>
    <td><%= novel.id %></td>
    <td><%= novel.title %></td>
    <td><%= novel.author %></td>
    <td><%= novel.hard_cover %></td>
    <td><%= novel.number_of_chapters %></td>
    <td><%= novel.created_at %></td>
    <td><%= novel.updated_at %></td>
  </tr>
  <% end %>
</table>
